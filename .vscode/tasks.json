{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake release",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE='Release' -Hbuild -Bbuild",
            "windows": {
                "command": "cmake -G 'MinGW Makefiles' -DCMAKE_BUILD_TYPE='Release' -Hbuild -Bbuild"
            }
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "make",
            "windows": {
                "command": "mingw32-make"
            },
            "args": [
                "-C", "build"
            ],
            "dependsOn": [
                "cmake release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}